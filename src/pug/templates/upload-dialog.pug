script#upload-dialog-template(type="text/x-template")
  .upload-dialog
    message(:show.sync="show", :click_away_close="false")
      h3(slot="header") Uploading

      div(slot="body")
        div {{msg}}
        .progress
          .bar(:style="{width: 'calc(' + progress + '% - 1em)'}")
            | {{progress}}%

      div(slot="footer")
        button.pure-button(title="Cancel upload", @click="cancel")
          .fa.fa-times
          | Cancel

    form(v-el:form)
      input(type="file", v-el:input, @change="_upload")
